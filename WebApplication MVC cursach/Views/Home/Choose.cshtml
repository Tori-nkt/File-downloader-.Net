@model List<WebApplication_MVC_cursach.Models.Result>

@{ Html.RenderPartial("Index"); }
<br />
@using (Html.BeginForm("ShowResults", "Home", FormMethod.Post))
{

    @if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            Тут могло б бути щось цікаве..
        </div>
    }
    else
    {
        <button type="submit" name="action" style="height: 40px; " class="btn btn-outline-primary" value="back">Скасувати вибір</button>
        <button type="submit" name="action" style="height: 40px; " class="btn btn-outline-primary" value="save">Зберегти</button>

        <br />
        <br />
        @if (Model[0].ModelType == "video")
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <img src="@item.Img" style="width:200px" />
                    <a href="@item.Link" style="color:blue">@item.Title</a><br />
                    <span style="font-size:15px;color:green">@item.Link</span><br />
                    <span style="color:gray;">@item.Snippet</span>
                    <div class="form-check">
                        @Html.CheckBox(item.id.ToString(), item.selected)
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card-columns">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <img class="card-img-top" src="@item.Img" style="width:250px" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text"><small class="text-muted">@item.Title</small></p>
                        </div>
                        <div class="form-check">
                            @Html.CheckBox(item.id.ToString(), item.selected)
                        </div>
                    </div>
                }

            </div>

        }
    }

}

